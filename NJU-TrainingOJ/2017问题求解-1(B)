//produce all the permutations of the set A3.

#include <stdio.h>

int main(){
    float increase=7.6;
    float presal=0;
    scanf("%f",&presal);
    //错误原因，题目中没有说明原来工资必须是整数！
    //printf("%.2f",presal);

    float retpay=(presal*(increase/100))/2;
    printf("%.2f,",retpay);
    float anasal=presal+presal*(increase/100);
    printf("%.2f,",anasal);
    float monsal=(presal+presal*(increase/100))/12;
    printf("%.2f",monsal);

    return 0;
}
