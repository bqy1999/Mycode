 #include<stdio.h>
 
 void compute_coin(int coin_value,int& number,int& amount_left);
 
 int main(){
     int money=0;
     int num1,num2,num3=0;
     while(1){
         scanf("%d",&money);
         if(money==0){
             printf("0 quarters(s) 0 dime(s) 0 penny(pennies)\n");
             break;
         }
         num1=0;
         num2=0;
         num3=0;
         else{
             if(money>=25)compute_coin(25,num1,money);
             if(money>=10)compute_coin(10,num2,money);
             if(money>=1)compute_coin(1,num3,money);
             printf("%d quarters(s) %d dime(s) %d penny(pennies)\n",num1,num2,num3);
         }
     }
     
     return 0;
 }
 
 void compute_coin(int coin_value,int& number,int& amount_left){
     number=amount_coin/coin_value;
     amount_left%=coin_value;
 }
