Non-negative Partial Sums

//暴力解法，时间复杂度O(N^2)

#include <iostream>
#include <vector>
#include <cstdio>

using namespace std;

int main(){
    int num=0;
    int sum=0;
    int res=0;
    int index=0;
    int b=0;
    while (true){
        vector<int> a;
        res=0;
        scanf("%d",&num);
        if(num==0)break;
        for (int i = 0; i < num; ++i) {
            scanf("%d",&b);
            a.push_back(b);
        }

        for ( index = 0; index < num; ++index) {
            sum=0;
            for (int i = 0; i < num; ++i) {
                sum+=a[(index+i)%num];
                if(sum<0){
                    break;
                }
                if(i==num-1)res++;
            }
        }
        printf("%d\n",res);
    }
    return 0;
}

//单调队列

